
<h2>Organization form</h2>

<%= simple_form_for @organization do |f| %>
<%= f.hidden_field :registration_id, value:   current_reistration.id %>
<div class="card-body">
   <div class= " mt-4">
     <%= f.input :name %>
     </div> 
        <div class= "mt-4">
            <%= f.input :address %>
         </div> 
        <div class= "mt-4">
         <%= f.input :head_quarter %>
        </div>
         <div class= "mt-4">
            <%= f.label :Logo %><br>
            <%= f.file_field :logo %>
         </div> 
     <div class= "mt-4">    
     <%= f.submit "submit", class: "btn btn-primary" %>
  </div>
 </div>  
<% end %>